{
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack",
    "build:server": "tsc",
    "watch": "npm-watch",
    "dev": "concurrently --raw \"npm run dev:server\" \"npm run build && npm run watch\"",
    "dev:server": "node dist/server/app.js",
    "clean": "rimraf dist"
  },
  "watch": {
    "build:client": {
      "patterns": [
        "client",
        "isomorphic"
      ],
      "runOnChangeOnly": true,
      "extensions": "ts,tsx,html,js,json"
    },
    "build:server": {
      "patterns": [
        "server",
        "isomorphic"
      ],
      "runOnChangeOnly": true,
      "extensions": "ts,tsx,html,js,json"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "concurrently": "^7.6.0",
    "cpx2": "^4.2.0",
    "npm-watch": "^0.11.0",
    "react-router-dom": "^6.8.2",
    "rimraf": "^4.3.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "express": "^4.21.0",
    "http-server": "^14.1.1",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
